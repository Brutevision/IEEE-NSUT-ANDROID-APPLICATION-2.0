<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <FrameLayout
        android:id="@+id/developers_frame_layout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/developers_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/developers_progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" />

    </FrameLayout>

    <TextView
        android:id="@+id/developers_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/developers_designation_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/developers_frame_layout"
        app:layout_constraintTop_toTopOf="@+id/developers_frame_layout"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/developers_designation_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/developers_phone_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/developers_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/developers_name_text_view" />

    <ImageView
        android:id="@+id/developers_phone_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/developers_frame_layout"
        app:layout_constraintStart_toStartOf="@+id/developers_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/developers_designation_text_view"
        app:srcCompat="@drawable/call" />

    <ImageView
        android:id="@+id/developers_email_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/developers_phone_image_view"
        app:layout_constraintStart_toEndOf="@+id/developers_phone_image_view"
        app:layout_constraintTop_toTopOf="@+id/developers_phone_image_view"
        app:srcCompat="@drawable/ic_gmail" />
</androidx.constraintlayout.widget.ConstraintLayout>